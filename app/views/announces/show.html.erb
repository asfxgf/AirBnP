<div class="container pad20">
  <div class="row justify-content-center">
    <div class="col-md-8">
     <!-- Displaying modele as a title</!-->
      <h2 class="text-underline"> <%= @announce.model %> </h2>
  <!-- For picture </!-->
  <% if @announce.photo? %>
    <%= @announce.photo.path, width: 250, height: 300, crop: :fill %>
  <% end %>
        <p><%= @announce.brand %></p>
        <p><%= @announce.state %></p>
        <p><%= @announce.description %></p>
        <p><%= @announce.price_per_day %></p>
        <p><%= @announce.purchase_year %></p>
        <p><%= @announce.date %></p>
        <% end %>
      </div>
    </div>
  </div>
