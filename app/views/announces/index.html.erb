<div id="searchbar">
    <form class="form-inline md-form mr-auto mb-4">
        <input class="form-control mr-sm-2" type="text" placeholder="Search your phone" aria-label="Search">
        <button class="btn btn-outline-warning btn-rounded btn-sm my-0" type="submit">Search
        </button>
    </form>
</div>

<div class="container">
    <h1><strong> Available phones <strong></h1>
    <p>Find your next phone</p>
  </div>
</div>

<div class="container">
  <div class="cards-index" >
    <% @announces.each do |announce| %>
     <%= link_to announce_path(announce), class: "card-link" do %>
       <div class="card-index">
          <%= cl_image_tag announce.photo, crop: :fit %>
          <div class="card-info-index">
            <h2><%= announce.model %> - <%= announce.brand %></h2>
            <p><%= announce.description %></p>
            <p>From:<%= announce.date_start%>- To:<%= announce.date_end %></p>
            <div class="card-info-price">
             <h2><%= announce.price_per_day %>â‚¬</h2>
            </div>
        </div>
       </div>
     <% end %>
   <% end %>
 </div>
