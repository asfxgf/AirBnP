<div class="container" id="container-bookings">
    <h1 class= "mt-5"><strong> All your booked phones <strong></h1>
  </div>
</div>

<div class="container full-page">
    <div class="row mt-5">
    <% @bookings.each do |booking| %>
          <div class="card-product col-6">
            <%= cl_image_tag booking.announce.photo %>
            <div class="card-product-infos card-right-part">
              <div class="card-description">
                <h2><%= booking.announce.model %></h2>
                <h2><%= booking.announce.brand %></h2>
                <p><%= booking.announce.description %></p>

              </div>
              <div class="card-bottom-link">
                <%= link_to "Details", announce_path(booking.announce_id) %>
                <%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure you want to delete this booked phone?" } do %>
                  <i class="fa fa-trash destroy_booking"></i>
                <% end %>
              </div>

            </div>
          </div>
    <% end %>
    </div>
</div>


